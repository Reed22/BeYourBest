<div class="container">
    {{#if equipment_list}}
    <h1 class="display-4 text-center">Equipment</h1>
        <table class="table table-striped table-borderless table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name of Equipment</th>
                    <th scope="col">Last Inspection Date</th>
                    <th scope="col">Inspected By</th>
                    <th scope="col">Passed Inspection?</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            {{#each equipment_list}}
            <tr scope="row">
                <td>{{name}}</td>
                <td>{{inspect_date}}</td>
                <td>{{inspector}}</td>
                <td>{{passed}}</td>
                <td><button class="btn btn-success" onclick="window.location.href = 'http://localhost:3000/update-inspection?id={{id}}'">Update Inspection</button></td>
                <td><button class="btn btn-danger" id="{{id}}" onclick="deleteEquipment({{id}})">Delete</button></td>
            </tr>
            {{/each}}
        </table>
    {{/if}}

    <button class="btn btn-primary btn-lg btn-block" id="equipment-btn" onclick="newEquipment()">Add New Equipment</button>
    <form method="POST" action="/equipment" id="equipment-form" style="visibility: hidden;">
        <legend class="border p-2 text-center">New Equipment Form</legend>
        <div class="form-group">
            <label for="name">Name of Equipment:</label>
            <input class="form-control" type="text" name="name" required><br>
        </div>
        <div class="form-group">
            <label for="install_date">Installation Date:</label>
            <input class="form-control" type="date" name="install_date" required><br>
        </div>
        <div class="form-group">
            <label for="inspection_date">Inspection Date:</label>
            <input class="form-control" type="date" name="inspection_date" required><br>
        </div>
        <div class="form-group">
            <label for="inspector">Inspected By:</label>
            <select class="form-control" name="inspector">
                {{#each trainer_list}}
                <option value="{{id}}">{{first}} {{last}}</option>
                {{/each}}
            </select><br>
        </div>
        <div class="form-group">
            <label for="passed_inspection">Passed Inspection?</label>
            <select class="form-control" name="passed_inspection">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select><br>
        </div>
        <div class="form-group">
            <input class="form-control" type="submit" value="Submit">
        </form>
    </form>
</div>
