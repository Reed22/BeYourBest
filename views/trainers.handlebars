<div class="container">
    {{#if trainer_list}}
    <h1 class="display-4 text-center">Trainers</h1>
    <table class="table table-striped table-borderless table-hover">
     <thead class="thead-dark">
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Start of Shift</th>
            <th scope="col">End of Shift</th>
            <th scope="col"></th>
        </tr>
    </thead>
        {{#each trainer_list}}
        <tr scope="row">
            <td>{{fName}}</td>
            <td>{{lName}}</td>
            <td>{{startTime}}</td>
            <td>{{endTime}}</td>
            <td><button class="btn btn-danger" id="{{id}}" onclick="deleteTrainer({{id}})">Delete</button></td>
        </tr>
        {{/each}}
    {{/if}}
    </table>
    <button class="btn btn-primary btn-lg btn-block" id="trainer-btn" onclick="newTrainer()">Add New Trainer</button>
    
    <form method="POST" action="/trainers" id="trainer-form" style="visibility: hidden;">
        <legend class="border p-2 text-center">New Trainer Form</legend>
        <div class="form-group">
            <label for="fname">First Name</label>
            <input class="form-control" type="text" name="fname" required><br>
        </div>
        <div class="form-group">
            <label for="lname">Last Name</label>
            <input class="form-control" type="text" name="lname" required><br>
        </div>
        <div class="form-group">
            <label for="start_shift">Start of Shift</label>
            <input class="form-control" type="time" name="start_shift" required><br>
        </div>
        <div class="form-group">
            <label for="end_shift">End of Shift</label>
            <input class="form-control" type="time" name="end_shift" required><br>
        </div>
        <input class="form-control" type="submit" value="Submit">
    </form>
</div>
