<div class="container">
<h1 class="display-4 text-center">Update Inspection for {{equipment.equipmentName}}</h1>
<form method = "POST" action = "/update-inspection">
  <input type = "hidden" name = "equipmentId" value = {{equipmentId}}><br>
  <div class="form-group">
    <label for="instructor">Inspector:</label>
    <select class="form-control" name="instructor" id="instructor">
      {{#if trainer_list}}
      {{#each trainer_list}}
      <option value ="{{id}}">{{first}} {{last}}</option>
      {{/each}}
      {{/if}}
    </select><br>
  </div>
  <div class="form-group">
    <label for="date">Date Inspected:</label>
    <input class="form-control" type="date" name="date" value={{equipment.inspectionDate}}><br>
  </div>
  <div class="form-group">
  <label for="pass">Passed?</label>
  <select class="form-control" name="pass" id="pass">
          <option value="1">Yes</option>
          <option value="0">No</option>
  </select><br>
  </div>
  <div class="form-group">
  <input class="form-control" type="submit" value="Submit Change">
  </div>
</form>
<footer class="py-5 bg-dark">
  <div class="container">
     <p class="m-0 text-center text-white">Copyright &copy; BeYourBest Fitness 2020</p>
  </div>
</footer>
