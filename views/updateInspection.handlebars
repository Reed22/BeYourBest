<script>
  document.addEventListener('DOMContentLoaded', select({{equipment.inspectedBy}}, {{equipment.passedInspection}}));
  function select(id1, id2) {
    var el = document.getElementById("instructor");
    el.value = id1;
    var el = document.getElementById("pass");
    el.value = id2;
  }
</script>