<div class="container">
<h1 class="display-4 text-center" name= "memberId" value = {{memberId}}>Update Member</h1>
<form method = "POST" action = "/updateMember" >
    <input type = "hidden" name = "memberId" value = {{memberId}}><br>
    <div class="form-group">
      <label for="fname">First Name</label>
      <input class="form-control" class="form-control"type="text" name="fname" value={{member.firstName}} required><br>
    </div>
    <div class="form-group">
      <label for="lname">Last Name</label>
      <input class="form-control" type="text" name="lname" value={{member.lastName}} required><br>
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input class="form-control" type="email" name="email" value={{member.email}} required><br>
    </div>
    <div class="form-group">
      <label for="join_date">Date Joined</label>
      <input class="form-control" type="date" name="join_date" value={{member.joinDate}} required><br>
    </div>
    <div class="form-group">
      <label for="advisor">Advisor</label>
      <select class="form-control" name="advisor" id="instructor">
          <option value="None">None</option>
          {{#if trainer_list}}
          {{#each trainer_list}}
          <option value ="{{id}}">{{first}} {{last}}</option>
          {{/each}}
          {{/if}}
      </select><br>
    </div>
    <div class="form-group">
      <label for="dues">Paid Dues?</label>
      <select class="form-control" name="dues" id="dues">
          <option value="1">Yes</option>
          <option value="0">No</option>
      </select><br>
    </div>
    <div class="form-group">
      <input class="form-control" type="submit" value="Submit">
    </div>
</form>
