<script>
  document.addEventListener('DOMContentLoaded', select({{member.trainerId}}, {{member.paidDues}}));
  function select(id1, id2) {
    var el = document.getElementById("instructor");
    el.value = id1;
    var el = document.getElementById("dues");
    el.value = id2;
  }
</script>