<div class="container">
    {{#if members_list}}
    <h1 class="display-4 text-center">Members</h1>
    <form method="GET" action="/members">
    <div class="form-group">
        <!--<label for="search">Find Member:</label>-->
        <input class="form-control"type="text" name="search" placeholder="Find Member">
        <input class="btn btn-primary btn-sm" type="submit" value="Search">
        <input class="btn btn-secondary btn-sm" type="submit" value="Reset">
    </div>
    </form>
        <table class="table table-striped table-borderless table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Advisor</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>

            {{#each members_list}}
            <tr scope="row">
                <td>{{fName}}</td>
                <td>{{lName}}</td>
                <td>{{email}}</td>
                <td>{{advisor}}</td>
                <td><button class="btn btn-danger" id="{{id}}" onclick="deleteMember({{id}})">Delete</button></td>
                <td><button class="btn btn-success" onclick="window.location.href = 'http://localhost:3000/updateMember?id={{id}}';">Update</button></td>
            </tr>
            {{/each}}
        </table>
    {{/if}}

    <button class="btn btn-primary btn-lg btn-block" id="member-btn" onclick="newMember()">Add New Member</button>
     <form method = "POST" action = "/members" id="member-form" style="visibility: hidden;">
        <legend class="border p-2 text-center">New Member Form</legend>
        <div class="form-group">
            <label for="fname">First Name</label>
            <input class="form-control" type="text" name="fname"required><br>
        </div>
        <div class="form-group">
            <label for="lname">Last Name</label>
            <input class="form-control" type="text" name="lname" required><br>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" type="email" name="email" required><br>
        </div>
        <div class="form-group">
            <label for="join_date">Date Joined</label>
            <input class="form-control" type="date" name="join_date" required><br>
        </div>
        <div class="form-group">
            <label for="trainer">Trainer</label>
            <select class="form-control" name="trainer">
                <option value="None">None</option>
                {{#if trainer_list}}
                {{#each trainer_list}}
                <option value="{{id}}">{{first}} {{last}}</option>
                {{/each}}
                {{/if}}
            </select><br>
        </div>
        <div class="form-group">
            <label for="dues">Paid Dues?</label>
            <select class="form-control" name="dues">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select><br>
        </div>
        <div class="form-group">
            <input class="form-control" type="submit" value="Submit">
        </div>
    </form>
</div>
