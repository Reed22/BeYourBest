extends layout.pug
block content
    nav(class='navbar navbar-expand-lg navbar-light bg-light')
        a(class='navbar-brand' href = 'http://localhost:3000/') BeYourBest
        div(class='collapse navbar-collapse')
            ul(class='navbar-nav')
                li(class='nav-item')
                    a(class='nav-link', href='http://localhost:3000/members') Members
                li(class='nav-item')
                    a(class='nav-link', href = "http://localhost:3000/trainers") Trainers
                li(class='nav-item')
                    a(class='nav-link', href = "http://localhost:3000/equipment") Equipment
                li(class='nav-item dropdown')
                    a(class="nav-link dropdown-toggle", href="#", id="navbarDropdown", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Classes
                    div(class="dropdown-menu", aria-labelledby="navbarDropdown")
                        a(class="dropdown-item", href="http://localhost:3000/classes") View Classes
                        a(class="dropdown-item", href="http://localhost:3000/signup") Enroll
    div(class="container")   
        header(class="jumbotron my-4")
            h1(class="display-3") Welcome To BeYourBest Fitness!
            p(class="lead") At BeYourBest Fitness, we encourage a strategy of everyday growth and development. A membership to our facilities includes a trained advisor to help you acheive your goals. Whether you are trying to bulk up, or just stay in shape, BeYourBest Fitness wants to help you get there!
        if class_list
            div(class="row text-center")
                each x in class_list
                    div(class="col-lg-3 col-md-6 mb-4")
                        div(class="card h-100")
                            div(class="card-body")
                                h4(class="card-title")= x.name
                                p(class="card-text")= x.date
                                p(class="card-text")= x.time
                            div(class="card-footer")
                                a(href = 'http://localhost:3000/signup?id={{id}}', class="btn btn-primary") Sign Up!

                    